<%- include('partials/header'); -%>

<section id="auth-steps" class="py-16 bg-gradient-to-b from-blue-50 to-white">
    <div class="max-w-8xl mx-auto px-4 sm:px-6">
        <!-- Header -->
        <div class="text-center mb-16 mt-16">
            <h2 class="text-3xl md:text-4xl text-custom-green mb-4">
                Get Started in Three Simple Steps
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Connect your Telegram account and start tracking your finances in minutes
            </p>
        </div>

        <!-- Steps Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
            <!-- Step 1 -->
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 transition-transform hover:-translate-y-1">
                <div class="flex items-center mb-4">
                    <span class="w-8 h-8 bg-custom-green-hover text-white rounded-full flex items-center justify-center font-bold">
                        1
                    </span>
                    <h3 class="text-xl font-semibold ml-3">Connect Telegram</h3>
                </div>
                <p class="text-gray-600">
                    Click the connect button and authorize your Telegram account to get started with MoneyDiary
                </p>
            </div>

            <!-- Step 2 -->
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 transition-transform hover:-translate-y-1">
                <div class="flex items-center mb-4">
                    <span class="w-8 h-8 bg-custom-green-hover text-white rounded-full flex items-center justify-center font-bold">
                        2
                    </span>
                    <h3 class="text-xl font-semibold ml-3">Set Preferences</h3>
                </div>
                <p class="text-gray-600">
                    Choose your preferred currency and customize your expense tracking categories
                </p>
            </div>

            <!-- Step 3 -->
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 transition-transform hover:-translate-y-1">
                <div class="flex items-center mb-4">
                    <span class="w-8 h-8 bg-custom-green-hover text-white rounded-full flex items-center justify-center font-bold">
                        3
                    </span>
                    <h3 class="text-xl font-semibold ml-3">Start Tracking</h3>
                </div>
                <p class="text-gray-600">
                    Begin logging your expenses directly through Telegram with simple commands
                </p>
            </div>
        </div>
        <!-- Click to proceed -->
        <section class="bg-custom-green text-white py-3 mt-16">
            <div class="max-w-7xl mx-auto text-center px-4">
                <p class="text-xl font-semibold ml-3">
                    Click the button below to log in/sign up:
                </p>
            </div>
        </section>

        <div class=" flex flex-col items-center space-y-6">
            <!-- <p class="text-center text-gray-700">Click the button below to log in using your Telegram account:                
            </p> -->
            <div class="flex justify-center w-full">
                <div class="inline-block mt-6">
                    <script 
                    async 
                    src="https://telegram.org/js/telegram-widget.js?22" 
                    data-telegram-login="MoneyDiarybot" 
                    data-size="large" 
                    data-auth-url="/after-login" 
                    data-request-access="write">                    
                    </script>
                </div>                  
            </div>
            <p class="text-center">
                <a href="/" class="text-custom-green-hover hover:text-custom-green">Go to Home</a>
            </p>
        </div>        
    </div>
</section>

<script>
    // Mobile menu functionality
    const menuButton = document.getElementById('menuButton');
        const mobileMenu = document.getElementById('mobileMenu');
        const menuOpenIcon = document.querySelector('.menu-open');
        const menuCloseIcon = document.querySelector('.menu-close');

        menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            menuOpenIcon.classList.toggle('hidden');
            menuCloseIcon.classList.toggle('hidden');
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!menuButton.contains(e.target) && !mobileMenu.contains(e.target)) {
                mobileMenu.classList.add('hidden');
                menuOpenIcon.classList.remove('hidden');
                menuCloseIcon.classList.add('hidden');
            }
        });
</script>


<%- include('partials/footer'); -%>